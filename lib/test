#Q4
names = ["James", "John", "Jerry"]
def greeting(names)
names.each do |name|
puts "Welcome, #{name}!"
end
end

greeting(names)


#Q5

def greeting_names(names)
names.map {|a| "Welcome, #{a}!"}
end #on irb, return value showed new array

greeting_names(names)

#Q6

welcome_msgs_array = greeting_names(names)
def room_assigner(welcome_msgs_array)
Array.new << welcome_msgs_array.each_with_index do |item, index| p "#{item} You are assigned to room #{index+1}"
end
end

room_assigner(welcome_msgs_array)

